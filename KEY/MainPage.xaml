<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YourAppNamespace.MainPage"
             BackgroundColor="White">
    <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">
        <!-- Título -->
        <Label Text="K-PAPE"
               FontSize="36"
               HorizontalOptions="Center"
               TextColor="Pink"/>

        <!-- Icono de Usuario -->
        <Image Source="user_icon.png" 
               HeightRequest="100" 
               WidthRequest="100" 
               HorizontalOptions="Center"/>

        <!-- Texto -->
        <Label Text="¡Inicia sesión o regístrate!"
               FontSize="18"
               HorizontalOptions="Center"
               TextColor="Black"/>

        <!-- Botón de Google -->
        <Button Text="GOOGLE"
                BackgroundColor="Pink"
                TextColor="White"
                Clicked="OnGoogleButtonClicked"/>

        <!-- Botón de Número de Teléfono -->
        <Button Text="NÚMERO DE TELÉFONO"
                BackgroundColor="Pink"
                TextColor="White"
                Clicked="OnPhoneButtonClicked"/>
    </VerticalStackLayout>
</ContentPage>


